# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# https://editorconfig.org/

root = true

# ========== 通用规则 ==========
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown 特殊情况：不要自动删除行尾空格
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ========== 源代码文件 ==========
[*.{js,jsx,ts,tsx,vue}]
# 现代前端统一使用 2 空格缩进（Vite / Next / Nuxt / CRA / ESLint 默认）
indent_size = 2
# 换行符统一 LF
end_of_line = lf
# 文件末尾保留换行符
insert_final_newline = true
# 删除多余空格
trim_trailing_whitespace = true
# 文件编码统一 UTF-8
charset = utf-8

# ========== JSON / YAML ==========
[*.{json,yml,yaml}]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ========== CSS / SCSS / LESS ==========
[*.{css,scss,less}]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ========== Markdown / 文档类 ==========
[*.{md,mdx}]
indent_size = 2
trim_trailing_whitespace = false

# ========== 配置文件 ==========
[*.{toml,ini}]
indent_size = 2

# ========== 特殊文件 ==========
[Makefile]
indent_style = tab

# ========== 高级增强建议 ==========
# 这些是 2025 年推荐做法（ESLint + Prettier 衔接用）
# 仅提示性注释，不影响行为
# - 缩进：2 空格
# - 行尾符号：LF（跨平台一致）
# - 文件末尾：保留换行
# - 字符编码：UTF-8
# - 删除多余空格：是
# - 单行长度控制由 Prettier/ESLint 负责（推荐 100~120）
